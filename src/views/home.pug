doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document'
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom
        main
            div#call
                video#userVideo(autoplay,playsinline,width='400', height = '400')
                button#mute Mute
                button#camera Camera Off
                select#cameras
                    option(value="device") Face Camera
            video#peerStream(autoplay,playsinline,width='400', height = '400')


            div#welcome
                form
                    input(type = "text", placeholder="room name", required)
                    button Enter room
                h4 OpenRooms
                ul
            div#room
                h3 
                ul
                form#msg
                    input(placeholder="msseage", required, type = "text")
                    button Send
                form#name
                    input(placeholder="nickname", required, type = "text")
                    button Save
        script(src = "/socket.io/socket.io.js") 
        script(src= "/public/js/app.js")